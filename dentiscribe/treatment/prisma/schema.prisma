datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  tasks     Task?    @relation(fields: [tasksId], references: [id])
  tasksId   String?  @unique
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Task {
  completed Boolean
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  text      String
  uid       User?
  updatedAt DateTime @updatedAt
}
